package {    import flash.geom.Point;	import EuclideanVector;	import flash.events.Event;	import flash.display.MovieClip;    public class Sprite extends MovieClip {		public var position:EuclideanVector = new EuclideanVector(new Point(0,0));		public var velocity:EuclideanVector = new EuclideanVector(new Point(0,0));		public var direction:EuclideanVector = new EuclideanVector(new Point(0,0));		        public var angle:Number;         		        public function Sprite(endPoint:Point) {            position = new EuclideanVector(endPoint);			addEventListener(Event.ENTER_FRAME,updateSprites);			         }				private function updateSprites(e:Event):void {			this.x = position.sum(velocity).position.x;			this.y = position.sum(velocity).position.y;		}		    }}